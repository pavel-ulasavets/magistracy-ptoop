<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="toolBar"
      fx:controller="EditorView.ToolBar.ToolBarController"
      maxWidth="200"
      styleClass="editor-section"
    >

    <Label styleClass="toolbar-label">Canvas Tool Bar</Label>
    <VBox styleClass="canvas-buttons-container" fx:id="canvasButtonsContainer" spacing="10">
    </VBox>

    <Label styleClass="toolbar-label">Project Tool Bar</Label>
    <VBox styleClass="project-buttons-container" fx:id="projectButtonsContainer" spacing="10">
    </VBox>
</VBox>
